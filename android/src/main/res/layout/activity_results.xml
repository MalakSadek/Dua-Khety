<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/historyprogress5"
        style="?android:attr/progressBarStyle"
        android:layout_width="81dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/actualImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="92dp"
                />

            <ImageView
                android:id="@+id/gardinerImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent"
                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="97dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsgardinercode2" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:lineSpacingExtra="8sp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="377dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsdescription2" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="245dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsmeaning2" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="433dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsusefullinks2" />

        <ImageView
            android:id="@+id/link1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            app:srcCompat="@drawable/resultsmoreinfo2" />

        <TextView
            android:id="@+id/link2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:autoLink="web"
            android:clickable="true"
            android:linksClickable="true"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="476dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:srcCompat="@drawable/resultsinfoaboutsymbol2" />

        <TextView
            android:id="@+id/listlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:linksClickable="true"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="302dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3769A4"
                android:text="Previous"
                android:textColor="#DFF8FE" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3769A4"
                android:text="Next"
                android:textColor="#DFF8FE" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>