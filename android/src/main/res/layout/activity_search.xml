<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/codeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Gardiner's Code"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/historyprogress3"
        style="?android:attr/progressBarStyle"
        android:layout_width="81dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/gardinerImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/codeTitle"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsgardinercode2" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="377dp" />

        <ImageView
            android:id="@+id/descriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsdescription2" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="245dp" />

        <ImageView
            android:id="@+id/meaningTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsmeaning2" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="433dp" />

        <ImageView
            android:id="@+id/usefullinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsusefullinks2" />

        <ImageView
            android:id="@+id/link1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsmoreinfo2" />

        <TextView
            android:id="@+id/link2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:autoLink="web"
            android:clickable="true"
            android:text="TextView"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="476dp" />

        <ImageView
            android:id="@+id/infosymbols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/resultsinfoaboutsymbol2" />

        <TextView
            android:id="@+id/listlink"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:autoLink="web"
            android:clickable="true"
            android:text="TextView"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="302dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/searchdictionary"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeInput"
        app:layout_constraintVertical_bias="0.134" />

</android.support.constraint.ConstraintLayout>